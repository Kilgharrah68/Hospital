	<!-- Configuraci贸n de escaneo de componentes en el paquete 'com.cga.sanidad' -->
	<context:component-scan
		base-package="com.cga.sanidad"></context:component-scan>
	
	<!-- Configuraci贸n del origen de datos (dataSource) -->
	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName"
			value="com.mysql.cj.jdbc.Driver"></property>
		<property name="url"
			value="jdbc:mysql://localhost:3306/Hospital">
		</property>
		<property name="username" value="root"></property>
		<property name="password" value="Douglas-4321"></property>
	</bean>
	<!-- Configuraci贸n del administrador de transacciones -->
	<bean id="transactionManager"
		class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
	<property name="dataSource" ref="dataSource"></property>
	</bean>
<!-- Habilitar el manejo de transacciones mediante anotaciones -->
<tx:annotation-driven />
